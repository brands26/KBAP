<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <bitmap xmlns:android="http://schemas.android.com/apk/res/android"
            android:src="@drawable/bottom_button_right" />
    </item>

    <item android:top="-2dp" android:bottom="-2dp" android:left="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.75dp"
                android:color="#59FFFFFF" />
        </shape>
    </item>
    <item   android:top="-2dp" android:bottom="-2dp" android:right="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.75dp"
                android:color="#59000000" >
            </stroke>
        </shape>
    </item>


</layer-list>